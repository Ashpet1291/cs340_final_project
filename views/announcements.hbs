<div class="container">
    <p class="lead">To add a new Announcement, please enter their information below and click `Submit`!</p>
</div>

<div class="container">
    <form class="form-horizontal" id="add-announcement-form" method="POST" action="/add-announcement-form">

        <input type="hidden" id="input-active" name="active" value="1">

        <div class="form-group">
            <label class="control-label col-sm-2" for="input-title">Title:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="input-title" id="input-title" placeholder="John">
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-2" for="input-note">Nickname: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="input-note" id="input-note">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="input-last_name">Last Name: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name='input-last_name' id='input-last_name' placeholder="Smith">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="input-birthday">Birthday: </label>
            <div class="col-sm-10">
                <input type="date" class="form-control" name="input-birthday" id="input-birthday">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="primary_number">Primary Phone Number: </label>
            <div class="col-sm-10">
                <input type="tel" class="form-control" name="primary_number" id="primary_number" placeholder="123-456-7891"
                       pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
            </div>
        </div>




        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">Submit</button>
            </div>
        </div>


    </form>
</div>