<div class="container">
<h1 class="display-1">Shopping Item's</h1>
</div>
<div class="container">

    <table class="table">

        {{!-- Header section --}}
        <thead>

        <tr>
            {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
            {{/each}}
        </tr>
        </thead>

        {{!-- Body section --}}
        <tbody>

        {{#each data}}
            <tr>
                <td>{{this.item_id}}</td>
                <td>{{this.active}}</td>
                <td>{{this.item_name}}</td>
                <td>{{this.item_amount}}</td>
                <td>{{this.suggested_store}}</td>
                <td>{{this.note}}</td>
                <td>{{this.item_owner}}
            </tr>
        {{/each}}
        </tbody>
    </table>

</div>
{{!-- Create a table --}}

<div class="container">
    <p class="lead">To add a new item, please enter their information below and click `Submit`!</p>
</div>

<div class="container">
    <form class="form-horizontal" id="add-item-form" method="POST" action="/add-item-form">

        <input type="hidden" id="imput-active" name="input-active" value="1">

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Item Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="input-itemName" id="input-itemName" placeholder="John">
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-2" for="input-itemAmount">Amount: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="input-itemAmount" id="input-itemAmount">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="input-suggStore">Suggested Store: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name='input-suggStore' id='input-suggStore'>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="input-note">Notes: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="input-note" id="input-note">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="input-itemOwner">Item Owner: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="input-itemOwner" id="input-itemOwner">
            </div>
        </div>





        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">Submit</button>
            </div>
        </div>


    </form>
</div>
