<div class="container">
    <h1 class="display-1">Places to see and do...</h1>
</div>

{{!-- Create a table --}}

<div class="container">
    <table class="table">

        {{!-- Header section --}}
        <thead>

        <tr>
            {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
            {{/each}}
        </tr>                                                                           </thead>

        {{!-- Body section --}}
        <tbody>

        {{#each data}}
            <tr>
                <td>{{this.place_id}}</td>
                <td>{{this.active}}</td>
                <td>{{this.name}}</td>
                <td>{{this.website}}</td>
                <td>{{this.indoor}}</td>
                <td>{{this.note}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>

</div>


<div class="container">
    <p class="lead">To add a new place, please enter their information below and click `Submit`!</p>
</div>

<div class="container">
    <form class="form-horizontal" id="add-place-form" method="POST" action="/add-place-form">

        <input type="hidden" id="input-active" name="input-active" value="1">

        <div class="form-group">
            <label class="control-label col-sm-2" for="input-name">Place Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="input-name" id="input-name">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="input-website">Website: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name='input-website' id='input-website'>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="input-indoor">Indoor: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="input-indoor" id="input-indoor">
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-2" for="input-note">Notes: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="input-note" id="input-note">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">Submit</button>
            </div>
        </div>


    </form>
</div>